#!/usr/bin/env python

import argparse
import os
import os.path as op
from spynoza.BIDS_tools import fetch_example_data

parser = argparse.ArgumentParser(description='This is a command line tool to fetch test-data.')
parser.add_argument('-d', '--directory', help='Directory to store downloaded files.', required=False)
parser.add_argument('-t', '--type', help='Type of data (7T or 3T).', required=False)
args = parser.parse_args()

if args.directory is None:
    args.directory = os.getcwd()

if args.type is None:
    args.type = '7T'

fetch_example_data(args.directory, args.type)